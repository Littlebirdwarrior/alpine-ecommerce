{
	"type": "module",
	"dependencies": {
		"alpinejs": "^3.14.9"
	},
	"devDependencies": {
		"tailwindcss": "^4.1.7",
		"vite": "^5.0.0",
		"@tailwindcss/vite": "^4.1.7"
	},
	"scripts": {
		"dev": "pnpm run watch:css & vite",
		"build": "pnpm run build:css && vite build",
		"preview": "vite preview",
		"watch:css": "tailwindcss -i ./src/app.css -o ./dist/output.css --watch",
		"build:css": "tailwindcss -i ./src/app.css -o ./dist/output.css --minify"
	}
}
